extend layout
block scripts
  script(src="/js/lib/Tone-13.3.1.min.js" type="text/javascript")
  script(src="/js/lib/scribbletune-1.9.4.js" type="text/javascript")
  script(src="/js/pub/script.js" type="text/javascript")
block content
  div(class="row")
    div(class="col-md-3" style="padding:0;margin:0;")
      ul(class="list-group")
        li(class="list-group-item text-center" style="background-color:#ddd;")
            label Beat Type
        li(class="list-group-item")
          label
            input(type="radio" name="type" checked="checked" value="trap")
            |  Trap
    div(class="col-md-9")
      div(class="panel panel-default")
        //div(class="panel-heading")
          h4
            b Test
        div(class="panel-body")
          div(class="text-center")
            div
              h4
                b(id="status") Click 'Create A New Beat' to start...
            hr
            div(class="progress")
              div(id="bar" class="progress-bar progress-bar-striped" role="progressbar" style="width: 60%;")
              span(class="sr-only") 60% Complete
            div
              audio(id="rec" controls="controls")
              hr
            div
              button(id="play" class="btn btn-primary") Create A New Beat
              |  | 
              button(id="download" class="btn btn-default" disabled="disabled") Download
